<div class="col-md-4 mx-auto">
  <div class="card text-center">
    <div class="card-header">
      <h3>New Note</h3>
    </div>
    <div class="card-body">
      <form action="/notes/add" method="POST">
        <div class="form-group p-1">
          <input
            type="text"
            name="title"
            class="form-control"
            placeholder="Title"
            autofocus
          />
        </div>
        <div class="form-group p-1">
          <textarea
            name="description"
            placeholder="Description"
            class="form-control"
          ></textarea>
        </div>
        <div class="form-group p-1">
          <button class="btn btn-primary btn-block">
            Save
          </button>
        </div>
      </form>
    </div>
  </div>
</div>