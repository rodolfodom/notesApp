<div class="col-md-4 mx-auto">
  <div class="card p-2">
    <div class="card-header">
      <h3>Edit note</h3>
    </div>
    <div class="card-body">
      <form action="/notes/edit/{{noteToEdit._id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT" />
        <input
          type="text"
          name="title"
          class="form-control my-2"
          value="{{noteToEdit.title}}"
        />
        <textarea
          name="description"
          class="my-2 form-control"
        >{{noteToEdit.description}}</textarea>
        <button
          type="submit"
          class="my-2 btn btn-primary col-md-12"
        >Save</button>
      </form>
    </div>
  </div>
</div>